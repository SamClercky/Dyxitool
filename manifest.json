{

    "manifest_version": 2,
    "name": "Dyxitool",
    "version": "1.0",
  
    "description": "Extention to help people with dyslexi.",
  
    "icons": {
      "48": "img/icons/icon.png"
    },


    "applications": {
        "gecko": {
          "id": "dyxitool@samclercky.be"
        }
    },

    "permissions": [
      "tabs",
      "storage"
    ],
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "js/common/logging.js",
          "js/common/Color.js",
          "js/common/CommunicationInterface.js",
          "js/common/iStorage.js",
          "js/content_scripts/insertCssFont.js",
          "js/content_scripts/cscreen.js",
          "js/content_scripts/client.js",
          "js/content_scripts/main.js"
        ],
        "css": [
          "css/styles.css"
        ]
      }
    ],

    "web_accessible_resources":[
      "fonts/OpenDyslexic-Regular.otf",
      "fonts/OpenDyslexic-Italic.otf",
      "fonts/OpenDyslexic-Bold.otf",
      "fonts/OpenDyslexic-BoldItalic.otf",
      "fonts/OpenDyslexicMono-Regular.otf"
    ],

    "options_ui": {
      "page": "html/option_page.html",
      "browser_style": true
    }
  
  }
  