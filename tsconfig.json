{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "js",
        "sourceMap": true,
        "target": "es2019",
        "incremental": true,
        "baseUrl": "./",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}